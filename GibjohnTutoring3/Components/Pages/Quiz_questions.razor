@page "/Quiz_questions"
@inject NavigationManager Navigation

<link rel=" stylesheet" href="~/CSS/Educationalmaterial.css"/>
<h3 class="text-center mt-4">Quiz Questions</h3>

<div class="container mt-4">
    <p class="text-center">Explore useful resources to help you prepare for quizzes effectively.</p>

    <!-- Useful Websites Section -->
    <h4 class="mt-4">📚 Useful Websites</h4>
    <div class="list-group">
        <a href="https://www.khanacademy.org/" target="_blank" class="list-group-item list-group-item-action">
            🎓 Khan Academy - Free educational resources
        </a>
        <a href="https://www.bbc.co.uk/bitesize" target="_blank" class="list-group-item list-group-item-action">
            📖 BBC Bitesize - Study guides for various subjects
        </a>
        <a href="https://quizlet.com/" target="_blank" class="list-group-item list-group-item-action">
            📝 Quizlet - Flashcards and practice quizzes
        </a>
    </div>

    <!-- Recommended YouTube Videos -->
    <h4 class="mt-5">🎥 Recommended YouTube Videos</h4>
    <div class="row">
        <!-- Video 1 -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://i3.ytimg.com/vi/hByodyZAijE/maxresdefault.jpg" class="card-img-top" alt="A-level biology">
                <div class="card-body text-center">
                    <h5 class="card-title">How to Study Effectively</h5>
                    <a href="https://www.youtube.com/watch?v=hByodyZAijE" target="_blank" class="btn btn-primary">Watch Now</a>
                </div>
            </div>
        </div>

        <!-- Video 2 -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://i3.ytimg.com/vi/70cAYYCJBuQ/maxresdefault.jpg" class="card-img-top" alt="Bodmas/Bidmas">
                <div class="card-body text-center">
                    <h5 class="card-title">Tips for Multiple Choice Tests</h5>
                    <a href="https://www.youtube.com/watch?v=70cAYYCJBuQ" target="_blank" class="btn btn-primary">Watch Now</a>
                </div>
            </div>
        </div>

        <!-- Video 3 -->
        <div class="col-md-4">
            <div class="card">
                <img src="https://i3.ytimg.com/vi/dItUGF8GdTw/maxresdefault.jpg" class="card-img-top" alt="Critical Thinking Strategies">
                <div class="card-body text-center">
                    <h5 class="card-title">Critical Thinking Strategies</h5>
                    <a href="https://www.youtube.com/watch?v=dItUGF8GdTw" target="_blank" class="btn btn-primary">Watch Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

